<!-- Header -->
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <h6 class="h2 text-white d-inline-block mb-0"><%= header %></h6>
        </div>
      </div>
    </div>
    <div id="error_explanation" class="h5 text-white d-inline-block mb-0">
      <ul>
        <% @survey.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- Main content -->
<div class="main-content" id="panel">
  <!--   Page content-->
  <div class="container-fluid mt--6">
    <!--    <div class="col">-->
    <div class="card bg-default">
      <div class="card-header bg-transparent">
        <div class="row align-items-center">
          <div class="col">
            <%= form_for @survey do |form| %>
              <div class="col-md" style="margin-bottom: 10px">
                <div class="field">
                  <%= form.text_field :name, class: 'form-control', placeholder: "Survey name" %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="links btn btn-neutral">
                    <%= link_to_add_association 'Add question', form, :questions %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <%= form.fields_for :questions do |question| %>
                    <%= render 'question_fields', f: question %>
                  <% end %>
                </div>
              </div>
              <%= form.submit :Submit, class: "actions btn btn-neutral float-right " %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
