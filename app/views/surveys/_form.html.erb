<body>
<!-- Main content -->
<div class="main-content" id="panel">
  <!--   Page content-->
  <div class="container-fluid mt--6">
    <!--    <div class="col">-->
    <div class="card bg-default">
      <div class="card-header bg-transparent">
        <div class="row align-items-center">
          <div class="col">
            <%= form_for @survey do |form| %>
              <div class="col-md" style="margin-bottom: 10px">
                <div class="field">
                  <%= form.text_field :name, class: 'form-control', placeholder: "Survey name" %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="links btn btn-neutral">
                    <%= link_to_add_association 'Add question', form, :questions %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <%= form.fields_for :questions do |question| %>
                    <%= render 'question_fields', f: question %>
                  <% end %>
                </div>
              </div>


              <%= form.submit :Submit, class: "actions btn btn-neutral float-right " %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag 'dashboard.js' %>
</body>
