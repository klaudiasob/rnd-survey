<body>
<!-- Main content -->
<div class="main-content" id="panel">
  <!-- Header -->
  <div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Answers</h6>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--   Page content-->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-header border-0">
            <div class="row align-items-center">
              <div class="col">
                <%= paginate @survey_users, theme: 'twitter-bootstrap-4',
                             pagination_class: "pagination-lg justify-content-center", nav_class: "d-inline-b" %>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <!-- Projects table -->
            <table class="table align-items-center table-flush">
              <thead class="thead-light">
              <tr>
                <th scope="col">Survey</th>
                <th scope="col">User</th>
                <th scope="col">Answers</th>
                <th scope="col">Date</th>

              </tr>
              </thead>
              <tbody>
              <% @survey_users.each do |item| %>

                <tr>
                  <th scope="row">
                    <div class="media-body">
                      <span class="name mb-0 text-sm"><%= item.survey.name %></span>
                    </div>
                  </th>
                  <td class="nickname">
                    <%= item.user.nickname %>
                  </td>
                  <td>
                    <a href="<%= survey_user_path(id: item.id, survey_id: item.survey_id)%>" class=" btn btn-sm btn-primary">Show</a>
                  </td>
                  <td>
                    <%= item.created_at %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag 'dashboard.js' %>
</body>