<body>
<!-- Main content -->
<div class="main-content" id="panel">

  <!--   Page content-->
  <div class="container-fluid mt--6">
    <div class="col">

      <%= form_for @survey_user, url: { action: 'create' } do |form| %>
        <%= form.hidden_field :survey_id, value: @survey_user.survey.id %>
        <%= form.text_field :user, class: 'form-control', placeholder: "Enter your nickname", style: "margin-bottom: 20px" %>
        <div class="card-header bg-transparent">
          <div class="row align-items-center">
            <div class="col">
              <%= form.fields_for :answer_survey_users do |user_answer| %>
                <%= render 'answer_survey_user_fields', f: user_answer %>
              <% end %>

              <div class="actions">
                <%= form.submit "Submit", class: "actions btn btn-neutral float-right " %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag 'dashboard.js' %>
</body>
